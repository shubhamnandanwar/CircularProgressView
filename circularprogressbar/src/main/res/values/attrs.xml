<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularProgressBar">

        <!-- Renamed attribute name to progress to progressValue -->
        <!-- For explanation see: https://stackoverflow.com/a/47753465/7356355 -->
        <attr name="progressValue" format="integer" />
        <attr name="maxProgress" format="integer"/>
        <attr name="progressColor" format="color"/>
        <attr name="progressWidth" format="dimension"/>

        <attr name="progressBackgroundWidth" format="dimension"/>
        <attr name="progressBackgroundColor" format="color"/>

        <!--<attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>-->
        <attr name="startAngle" format="integer|reference"/>

        <attr name="enableBackgroundDashEffect" format="boolean"/>
        <attr name="showDot" format="boolean"/>

        <attr name="dotWidth" format="dimension"/>

        <attr name="animationDuration" format="integer"/>

        <attr name="progressCap" format="enum">
            <enum name="round" value="0"/>
            <enum name="flat" value="1"/>
        </attr>

        <attr name="interpolator" format="enum">
            <enum name="linear" value="0"/>
            <enum name="accelerate" value="1"/>
            <enum name="decelerate" value="2"/>
        </attr>

    </declare-styleable>
</resources>

